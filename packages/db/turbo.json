{
  "extends": ["//"],
  "tasks": {
    "db:health": {
      "env": ["DATABASE_PRIMARY_URL"],
      "cache": false
    },
    "db:health:detailed": {
      "env": ["DATABASE_PRIMARY_URL"],
      "cache": false
    },
    "db:health:watch": {
      "env": ["DATABASE_PRIMARY_URL"],
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "env": ["DATABASE_PRIMARY_URL"],
      "dependsOn": ["^db:push"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "apps/api/.env",
        "drizzle.config.ts",
        "src/**"
      ],
      "outputs": []
    },
    "db:generate": {
      "env": ["DATABASE_PRIMARY_URL"],
      "dependsOn": ["^db:generate"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "apps/api/.env",
        "drizzle.config.ts",
        "src/**"
      ],
      "outputs": ["migrations/**"]
    },
    "db:migrate": {
      "env": ["DATABASE_PRIMARY_URL"],
      "dependsOn": ["^db:migrate"],
      "inputs": ["$TURBO_DEFAULT$", "apps/api/.env", "migrations/**"],
      "outputs": []
    },
    "db:studio": {
      "env": ["DATABASE_PRIMARY_URL"],
      "cache": false,
      "persistent": true
    }
  }
}

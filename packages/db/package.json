{
  "name": "@esk/db",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "db:health": "dotenv -e ../../apps/api/.env -- tsx scripts/monitor.ts",
    "db:health:detailed": "dotenv -e ../../apps/api/.env -- tsx scripts/monitor.ts detailed",
    "db:health:watch": "dotenv -e ../../apps/api/.env -- tsx scripts/monitor.ts watch",
    "db:push": "dotenv -e ../../apps/api/.env -- drizzle-kit push",
    "db:generate": "dotenv -e ../../apps/api/.env -- drizzle-kit generate",
    "db:migrate": "dotenv -e ../../apps/api/.env -- drizzle-kit migrate",
    "db:studio": "dotenv -e ../../apps/api/.env -- drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit"
  },
  "exports": {
    "./client": "./src/client.ts",
    "./job-client": "./src/job-client.ts",
    "./cache": "./src/cache.ts",
    "./schema": "./src/schema.ts",
    "./queries": "./src/queries.ts",
    "./health": "./src/utils/health.ts"
  },
  "dependencies": {
    "@esk/utils": "workspace:*",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "postgres": "^3.4.7",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@esk/eslint-config": "workspace:*",
    "@esk/prettier-config": "workspace:*",
    "@esk/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}

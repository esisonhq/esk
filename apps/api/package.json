{
  "name": "@esk/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "update-http-statuses": "tsx scripts/update-http-statuses && eslint --fix ./src/lib/http/status-codes.ts ./src/lib/http/status-phrases.ts"
  },
  "dependencies": {
    "@esk/utils": "workspace:*",
    "@hono/node-server": "^1.18.1",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-openapi": "^1.1.0",
    "@scalar/hono-api-reference": "^0.9.13",
    "better-auth": "^1.3.6",
    "hono": "^4.9.0",
    "hono-rate-limiter": "^0.4.2",
    "pino": "^9.8.0",
    "pino-http": "^10.5.0",
    "superjson": "^2.2.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@esk/eslint-config": "workspace:*",
    "@esk/prettier-config": "workspace:*",
    "@esk/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "pino-pretty": "^13.1.1",
    "ts-morph": "^26.0.0",
    "typescript": "^5.0.0"
  }
}
